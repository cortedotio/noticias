{
  "functions": {
    "source": "news-robot",
    "runtime": "nodejs20",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": { "port": 5003 },
    "firestore": { "port": 8080, "host": "127.0.0.1" },
    "ui": { "enabled": false }
  }
}